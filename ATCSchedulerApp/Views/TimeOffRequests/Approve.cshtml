@model ATCScheduler.Models.TimeOffRequest
@{
    ViewData["Title"] = "Approve";
    Layout = "~/Views/Shared/_TimeOffRequestsLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Time Off Request</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TORStatus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TORStatus)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ApproverNotes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApproverNotes)
            <form asp-action="Approve" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="TimeOffRequestId" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="User" />
                    <input type="hidden" asp-for="StartDate" />
                    <input type="hidden" asp-for="StartTime" />
                    <input type="hidden" asp-for="EndDate" />
                    <input type="hidden" asp-for="EndTime" />
                    <input type="hidden" asp-for="Description" />
                    <input type="hidden" asp-for="TORStatus" />
                    <input asp-for="ApproverNotes" class="form-control" />
                    <span asp-validation-for="ApproverNotes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="TimeOffRequestId" class="btn btn-default">Approve</button> | <a asp-action="TORApproval">Back to TOR Approvals</a>
                </div>
            </form>
        </dd>
    </dl>

</div>