@model ATCScheduler.Models.ViewModels.CreatePositionViewModel

@{
    Layout = "~/Views/Shared/_PositionsLayout.cshtml";
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Position</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Position.Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Position.Title" class="form-control" />
                <span asp-validation-for="Position.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Position.Abbreviation" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Position.Abbreviation" class="form-control" />
                <span asp-validation-for="Position.Abbreviation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ListOfSkillLevels" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedSkillLevels, Model.ListOfSkillLevels, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

