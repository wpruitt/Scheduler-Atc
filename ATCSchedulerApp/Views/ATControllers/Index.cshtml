@model IEnumerable<ATCScheduler.Models.ATController>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FlyingStatus)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlyingStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillLevel.SkillLevelId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ControllerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ControllerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ControllerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
